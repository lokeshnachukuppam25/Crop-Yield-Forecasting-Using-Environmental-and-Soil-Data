    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/app.py",
            "cwd": "${workspaceFolder}/app",
            "env": {
                "FLASK_ENV": "development"
            },
            "args": [],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Launch Chrome - Flask App",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/app"
        },
        {
            "name": "Launch Chrome - 127.0.0.1",
            "request": "launch",
            "type": "chrome",
            "url": "http://127.0.0.1:5000",
            "webRoot": "${workspaceFolder}/app"
        }
    ]
}